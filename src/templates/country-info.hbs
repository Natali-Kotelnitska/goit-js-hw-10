{{#each this}}
  <div class='country-heading-box'>
    <img class='flag' src='{{flags.svg}}' alt='flag of {{name.official}}' width='50' />
    <h2 class='country-heading'>{{name.official}}</h2>
  </div>

  <div class='country-thumb'>
    <ul class='country-description'>
      <li class='country-description__item'><b
          class='country-description__title'
        >Capital:</b>{{capital}}</li>
      <li class='country-description__item'>
        <b class='country-description__title'>Population:</b>{{population}}</li>
      <li class='country-description__item'><b class='country-description__title'>Languages:</b>
        <ul class='languages-list'>
          {{#each languages}}
            <li class='languages-list__item'>{{#if @last}}{{this}} {{else}} {{this}}, {{/if}} </li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </div>
{{/each}}